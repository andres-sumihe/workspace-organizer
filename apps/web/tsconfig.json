{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "allowJs": false,
    "types": ["vite/client"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@workspace/shared": ["../../packages/shared/src/index.ts"],
      "@/*": ["./src/*"],
      "@workspace/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
