{
  "name": "workspace-organizer",
  "version": "0.2.1",
  "private": true,
  "description": "Workspace for a file and folder organization dashboard.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "main": "electron/main.js",
  "overrides": {
    "node-gyp": "12.1.0"
  },
  "scripts": {
    "setup-node": "node scripts/setup-local-node.js",
    "dev": "concurrently \"pnpm --filter @workspace/api dev\" \"pnpm --filter @workspace/web dev\"",
    "dev:api": "pnpm --filter @workspace/api dev",
    "dev:web": "pnpm --filter @workspace/web dev",
    "dev:desktop": "concurrently \"pnpm --filter @workspace/api dev\" \"pnpm --filter @workspace/web dev\" \"node ./scripts/wait-for-http.js http://127.0.0.1:5173 && electron .\"",
    "build": "pnpm --filter @workspace/api build:bundle && pnpm --filter @workspace/web build",
    "prebuild:desktop": "node scripts/validate-desktop-build.js",
    "rebuild:electron": "pnpm dlx @electron/rebuild --force",
    "rebuild:node": "npm rebuild better-sqlite3",
    "postbuild:desktop": "pnpm run rebuild:node",
    "postbuild:desktop:win": "pnpm run rebuild:node",
    "postbuild:desktop:mac": "pnpm run rebuild:node",
    "postbuild:desktop:linux": "pnpm run rebuild:node",
    "build:desktop": "pnpm run rebuild:electron && pnpm run build && electron-builder",
    "build:desktop:win": "pnpm run rebuild:electron && pnpm run build && electron-builder --win",
    "release:desktop:win": "pnpm run rebuild:electron && pnpm run build && electron-builder --win --publish always",
    "build:desktop:mac": "pnpm run rebuild:electron && pnpm run build && electron-builder --mac",
    "build:desktop:linux": "pnpm run rebuild:electron && pnpm run build && electron-builder --linux",
    "package:desktop": "pnpm run build && electron-builder --dir",
    "validate:desktop": "node scripts/validate-desktop-build.js",
    "convert:icon": "node scripts/convert-icon.js",
    "lint": "eslint .",
    "format": "prettier --check .",
    "typecheck": "pnpm run typecheck:shared && pnpm run typecheck:api && pnpm run typecheck:web",
    "typecheck:shared": "tsc --project packages/shared/tsconfig.json",
    "typecheck:api": "tsc --project apps/api/tsconfig.json",
    "typecheck:web": "tsc --project apps/web/tsconfig.json",
    "test": "pnpm run test:api && pnpm run test:fs",
    "test:api": "pnpm --filter @workspace/api test",
    "test:fs": "node lib/workspace-fs.test.js",
    "test:fs:integration": "node lib/workspace-fs-integration.test.js"
  },
  "keywords": [
    "dashboard",
    "file-management",
    "templates"
  ],
  "author": "Andres Sumihe",
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.18.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "mustache": "^4.2.0",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "me.andressumihe.workspaceorganizer",
    "publish": [
      {
        "provider": "github",
        "owner": "andres-sumihe",
        "repo": "workspace-organizer"
      }
    ],
    "productName": "Workspace Organizer",
    "asar": true,
    "asarUnpack": [
      "apps/api/dist/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build-assets"
    },
    "files": [
      "electron/**/*",
      "lib/**/*",
      "apps/api/dist/**/*",
      "apps/web/dist/**/*",
      "packages/shared/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "apps/api/data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": true,
    "nodeGypRebuild": false,
    "afterPack": "./scripts/afterPack.js",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build-assets/icon-1024.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build-assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "volta": {
    "node": "22.16.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "sharp"
    ]
  }
}
