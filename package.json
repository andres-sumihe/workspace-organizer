{
  "name": "workspace-organizer",
  "version": "0.1.0",
  "private": true,
  "description": "Workspace for a file and folder organization dashboard.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "main": "electron/main.js",
  "scripts": {
  "dev": "concurrently \"npm run dev --workspace @workspace/api\" \"npm run dev --workspace @workspace/web\"",
  "dev:api": "npm run dev --workspace @workspace/api",
  "dev:web": "npm run dev --workspace @workspace/web",
  "dev:desktop": "concurrently \"npm run dev --workspace @workspace/web\" \"npx wait-on http://localhost:5173 && electron .\"",
  "build": "npm run build --workspace @workspace/api && npm run build --workspace @workspace/web",
    "lint": "eslint .",
    "format": "prettier --check .",
    "typecheck": "npm run typecheck:shared && npm run typecheck:api && npm run typecheck:web",
    "typecheck:shared": "tsc --project packages/shared/tsconfig.json",
    "typecheck:api": "tsc --project apps/api/tsconfig.json",
    "typecheck:web": "tsc --project apps/web/tsconfig.json",
    "test:api": "npm run test --workspace @workspace/api"
  },
  "keywords": [
    "dashboard",
    "file-management",
    "templates"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.18.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
  "eslint-import-resolver-typescript": "^4.4.4",
  "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
  ,
  "dependencies": {
    "fs-extra": "^11.1.1",
    "chokidar": "^4.0.3",
    "better-sqlite3": "^12.4.1",
    "extract-zip": "^2.0.1",
    "archiver": "^7.0.1",
    "mustache": "^4.2.0",
    "uuid": "^13.0.0"
  }
  
}